<h1>Sign up</h1>

<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.label :username %><br />
  <%= f.text_field :username %><%= @user.errors[:username].join(', ') %><br />
  <br />

  <%= f.label :email %><br />
  <%= f.email_field :email %><%= @user.errors[:email].join(', ') %><br />
  <br />

  <%= f.label :password %><br />
  <%= f.password_field :password %><%= @user.errors[:password].join(', ') %><br />
  <br />

  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %><%= @user.errors[:password_confirmation].join(', ') %><br />
  <br />

  <%= f.submit "Sign up" %>

<% end %>